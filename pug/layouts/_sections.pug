mixin cardWithModal(cardImage, cardTitle, cardText, cardModal)
    .col-lg-3.col-12
        .card(class=cardModal=="#1"?"bg-primary":"")
            button.btn.text-start(type="button" data-bs-toggle="modal" data-bs-target=cardModal)
                img.card-img-top(src=cardImage alt=cardTitle)
            .card-body
                button.btn.text-start(type="button" data-bs-toggle="modal" data-bs-target=cardModal)
                    h5.card-title(class=cardModal=="#1"?"text-light":"")= cardTitle
                    p.card-text(class=cardModal=="#1"?"text-light":"")= cardText

mixin card(cardImage, cardTitle, cardText)
    .col-lg-4.col-12
        .card
            img.card-img-top(src=cardImage alt=cardTitle)
            .card-body
                h5.card-title= cardTitle
                p.card-text= cardText

