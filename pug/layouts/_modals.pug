                                img(src="./assets/png/team2.png", alt="image" width="200")
                                h2 Rafael Riveros
                        .row
                            .col
                                img(src="./assets/png/team3.png", alt="image" width="200")
                                h2 Josue Castillo
                            .col
                                img(src="./assets/png/team4.png", alt="image" width="200")
